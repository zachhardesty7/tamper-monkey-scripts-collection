{
  "name": "tamper-monkey-scripts-collection",
  "description": "Tamper Monkey Scripts Collection",
  "version": "2.0.0",
  "author": "Zach Hardesty <hello@zachhardesty.com>",
  "license": "MIT",
  "eslintConfig": {
    "extends": [
      "hardesty",
      "plugin:userscripts/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/utils/**"
        ],
        "rules": {
          "userscripts/filename-user": "off"
        }
      }
    ],
    "ignorePatterns": [
      "**/*.ts"
    ],
    "env": {
      "jquery": true,
      "greasemonkey": true
    }
  },
  "devDependencies": {
    "@types/tampermonkey": "^5.0.5",
    "eslint": "^8.57.1",
    "eslint-config-hardesty": "^7.5.0",
    "eslint-plugin-userscripts": "^0.5.6",
    "prettier": "^3.8.1",
    "stylelint": "^17.3.0",
    "typescript": "^5.9.3"
  }
}
